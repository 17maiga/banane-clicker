{% extends 'base.html.twig' %}

{% block title %}Banane Clicker{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <img src="{{ asset('img/banana.png') }}" alt="the banana" style="max-width: 500px"/>
        </div>
        <div class="col">
            <div>welcome to the game !</div>
            <div {{ stimulus_controller('game') }}>
                <div {{ stimulus_target('game', 'score') }} id="score">10</div>
                <label>
                    <input type="text" class="text-light bg-dark border-light rounded" {{ stimulus_target('game', 'name') }}>
                </label>

                <button {{ stimulus_action('game', 'save') }} class="text-warning bg-dark border-warning rounded">
                    Save
                </button>

                {% for upgrade in upgrades %}
                    <div {{ stimulus_target('game', 'upgrade') }}>
                        <div class="name">{{ upgrade[name] }}</div>
                        <div class="value">{{ upgrade[value] }}</div>
                    </div>
                {% endfor %}

                <div {{ stimulus_target('game', 'output') }}></div>
            </div>
        </div>
    </div>
{% endblock %}
