{% extends 'base.html.twig' %}
{% block title %}Create upgrade{% endblock %}
{% block body %}
    {# Form to create a new upgrade #}
    {{ form_start(form) }}
    <div class="grid">
        <div class="row">
            <div class="col-2">
                {{ form_label(form.name) }}
            </div>
            <div class="col-10">
                {{ form_widget(form.name, { attr: {
                    class: "text-warning bg-dark border-white rounded w-100"
                } }) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                {{ form_label(form.bananasPerSecond, 'Bananas per second') }}
            </div>
            <div class="col-10">
                {{ form_widget(form.bananasPerSecond, { attr: {
                    class: "text-warning bg-dark border-white rounded w-100"
                } }) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                {{ form_label(form.price) }}
            </div>
            <div class="col-10">
                {{ form_widget(form.price, { attr: {
                    class: "text-warning bg-dark border-white rounded w-100"
                } }) }}
            </div>
        </div>
    </div>
    <button type="submit" class="text-warning bg-dark border-warning rounded">Create</button>
    {{ form_end(form) }}
{% endblock %}